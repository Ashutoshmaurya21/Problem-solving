#include <iostream>
#include <string>
using namespace std;

int main()
 {
	string a;
    string b;
    cin>>a>>b;
    cout<<a.size()<<" ";
    cout<<b.size()<<endl;
    cout<<a+b<<endl;
    char x=a[0];
    a[0]=b[0];
    b[0]=x;
    
    cout<<a<<" "<<b;
    
    
    
    
    
    
  
    return 0;
}
